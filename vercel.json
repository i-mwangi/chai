{
  "buildCommand": "pnpm run build && pnpm run frontend:build",
  "outputDirectory": "frontend/dist",
  "devCommand": "node frontend/server.js",
  "installCommand": "pnpm install",
  "functions": {
    "api/index.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ]
}